{
  "extends": "./config/tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist/components",
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "declarationMap": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo"
  },
  "include": [
    "src/index.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts",
    "src/hooks/**/*.ts"
  ],
  "exclude": [
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.performance.test.tsx",
    "**/*.a11y.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/*.scss",
    "node_modules",
    "dist",
    "storybook-static"
  ]
}
