{
  "name": "preact-aurora-ui",
  "version": "0.0.28",
  "description": "Modern Material Design 3 components for Preact applications with zero-config setup, full accessibility, and smooth theming",
  "keywords": [
    "preact",
    "ui",
    "components",
    "material-design",
    "material-design-3",
    "md3",
    "typescript",
    "accessibility",
    "a11y",
    "theming",
    "css-custom-properties",
    "zero-config",
    "storybook"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.scss",
    "./styles/*": "./dist/styles/*.scss"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:components": "bash scripts/build-npm-package.sh",
    "build:npm": "npm run build:components",
    "publish:npm": "npm run build:npm && npm publish",
    "preview": "vite preview",
    "demo:setup": "cd demo && npm install",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "demo:all": "npm run build:npm && npm run demo:setup && npm run demo:dev",
    "test": "vitest run --config config/vitest.config.ts",
    "test:ui": "vitest --ui --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:integration": "playwright test --config config/playwright.config.ts",
    "test:a11y": "vitest run --config config/vitest.a11y.config.ts",
    "test:performance": "vitest run --config config/vitest.performance.config.ts",
    "test:all": "npm run test && npm run test:a11y && npm run test:performance",
    "bundle-analyze": "vite build --config config/vite.bundle-analysis.config.ts && open dist/bundle-analysis.html",
    "bundle-analyze:ci": "vite build --config config/vite.bundle-analysis.config.ts",
    "validate:all": "./scripts/validate-tests.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook-to-docs": "bash scripts/build-storybook-to-docs.sh",
    "copy-readme-to-docs": "bash scripts/copy-readme-to-docs.sh",
    "build:all": "sh scripts/build-and-copy.sh",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --max-warnings=0 --config config/eslint.config.js",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix --config config/eslint.config.js",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "type-check": "tsc --noEmit",
    "md-to-html": "bash scripts/md-to-html.sh"
  },
  "dependencies": {
    "sass-embedded": "^1.89.2"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prachwal/preact-aurora-ui.git"
  },
  "homepage": "https://prachwal.github.io/preact-aurora-ui",
  "bugs": {
    "url": "https://github.com/prachwal/preact-aurora-ui/issues"
  },
  "author": "Prachwal",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@chromatic-com/storybook": "^4.0.1",
    "@preact/preset-vite": "2.10.1",
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-vitest": "^9.0.13",
    "@storybook/preact-vite": "^9.0.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-core": "^4.9.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.0.0",
    "markdown-cli": "^1.6.0",
    "playwright": "^1.47.2",
    "preact": "10.26.9",
    "sass-embedded": "^1.89.2",
    "storybook": "^9.0.13",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-bundle-analyzer": "^0.11.0",
    "vitest": "^3.2.4"
  }
}
